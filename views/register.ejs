</head>

<body>
    <h1>Register</h1>
    <div class="form-group">
        <form action="/merchant/register" method="post">
            <section>
                <label for="username">Username:</label>
                <input type="text" id="username" placeholder="username" name="id" class="form-label-style">
            </section>
            <section>
                <label for="name">Your name:</label>
                <input type="text" id="name" placeholder="name" name="user_name" class="form-label-style">
            </section>
            <section>
                <label for="password">Password:</label>
                <input type="password" id="password" placeholder="password" name="user_password"
                    class="form-label-style">
            </section>
            <section>
                <label for="address">Your address:</label>
                <input type="text" id="address" placeholder="address" name="address" class="form-label-style">
            </section>
            <section>
                <label for="phonenumber">Phone Number:</label>
                <input type="phonenumber" id="phonenumber" placeholder="phonenumber" name="phone_num"
                    class="form-label-style">
            </section>
            <button class="item-btn btn btn-primary">register</button>
        </form>

    </div>

