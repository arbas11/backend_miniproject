        .btn-upload {
            width: 5em;
            padding: 1px 6px;
            border-radius: 5px;
            margin-top: 10px;
            margin-bottom: 10px;
            border-style: none;
            background-color: #D96098;
        }

        .alert-style-upload {
            background-color: #FAEEE7;
